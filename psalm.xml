<?xml version="1.0"?>
<psalm
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"

    strictBinaryOperands="true"

>
    <issueHandlers>
        <DeprecatedClass errorLevel="suppress"/>
        <DeprecatedMethod errorLevel="suppress"/>
        <DeprecatedFunction errorLevel="info"/>
        <RedundantCastGivenDocblockType errorLevel="suppress"/>
        <UnsafeGenericInstantiation errorLevel="suppress"/>
        <DeprecatedProperty errorLevel="info"/>
        <MissingOverrideAttribute errorLevel="suppress"/>
        <ClassMustBeFinal errorLevel="suppress"/>
        <PossiblyUnusedMethod errorLevel="suppress"/>
        <UnusedClass errorLevel="suppress"/>
        <PossiblyUnusedParam errorLevel="suppress"/>
        <PossiblyFalseArgument errorLevel="suppress"/>
        <PossiblyInvalidArgument errorLevel="info"/>
        <LessSpecificImplementedReturnType errorLevel="info"/>
        <UndefinedDocblockClass errorLevel="info"/>
        <ImplementedReturnTypeMismatch errorLevel="info"/>
        <MissingTemplateParam errorLevel="info"/>
        <UnnecessaryVarAnnotation errorLevel="info"/>
        <InvalidArrayOffset errorLevel="info"/>
        <PossiblyFalseOperand errorLevel="info"/>
        <LessSpecificReturnStatement errorLevel="info"/>
        <MoreSpecificReturnType errorLevel="info"/>
        <ArgumentTypeCoercion errorLevel="info"/>
        <UnusedDocblockParam errorLevel="info"/>
        <RiskyTruthyFalsyComparison errorLevel="info"/>
        <InvalidExtendClass errorLevel="suppress"/>
        <MissingPropertyType errorLevel="info" />
        <MethodSignatureMismatch errorLevel="info"/>
    </issueHandlers>
    <projectFiles>
        <directory name="src" />
        <directory name="lib/commercetools-api/src" />
        <directory name="lib/commercetools-import/src" />
        <directory name="lib/commercetools-base/src" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>
</psalm>
